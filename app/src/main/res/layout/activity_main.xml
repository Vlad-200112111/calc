<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewVerh"
        android:layout_width="411dp"
        android:layout_height="94dp"
        android:background="@drawable/verh_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Verh"
        android:layout_width="247dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:text="@string/verh"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="78dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_sber_coren"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/main_linear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/gradient_my_page"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewVerh" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Владелец страницы: Фамилия И.О."
        app:layout_constraintTop_toBottomOf="@+id/viewVerh"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageBot"
        android:layout_width="411dp"
        android:layout_height="306dp"
        app:srcCompat="@drawable/bot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_linear"/>

    <FrameLayout
        android:id="@+id/layoutMyCreditVars"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBot">


        <ImageButton
            android:id="@+id/btnMyCreditVars"
            style="@android:style/Widget.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gradient_my_page"
            android:onClick="OnClickMyCreditVars"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои кредитные варианты"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutSpravka"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMyCreditVars"
        android:layout_marginTop="15dp">


        <ImageButton
            android:id="@+id/btnSpravka"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gradient_spravka"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:cornerRadius="30dip"
            android:onClick="OnClickSpravka"/>

        <TextView
            android:id="@+id/textSpravka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="Справка по кредитам"
            android:textColor="#000000"
            android:textSize="25sp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/layoutCreateVar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSpravka"
        android:layout_marginTop="15dp">


        <ImageButton
            android:id="@+id/btnCreateVar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gradient_create_credit_var"
            app:cornerRadius="15dip"
            android:onClick="OnClickCreateCreditVar"/>

        <TextView
            android:id="@+id/textCreateVar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать кредитный вариант"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>