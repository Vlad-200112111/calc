<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    tools:context=".MainActivityRegistraciya">

    <View
        android:id="@+id/view_verh"
        android:layout_width="411dp"
        android:layout_height="94dp"
        android:background="@drawable/verh_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_verh"
        style="@style/Verh"
        android:layout_width="247dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:text="@string/verh"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="86dp"
        android:layout_height="78dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_sber_coren"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_fon_white_20"
        android:layout_width="342dp"
        android:layout_height="564dp"
        android:background="#30FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_verh"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/text_registraciya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Регистрация"
        android:textColor="#219F38"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/text_border"
        android:hint="Имя"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_family"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/text_border"
        android:hint="Фамилия"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_patronymic"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/text_border"
        android:hint="Отчество"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_pochta"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/text_border"
        android:hint="Почта"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_number"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/text_border"
        android:hint="Телефон"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_loginreg"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/text_border"
        android:hint="Логин"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_passwordreg"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/text_border"
        android:hint="Пароль"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_save_registr"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#21A038"
        android:text="Сохранить"
        android:onClick="OnClickBtnRegistraciyaVoiti"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

</androidx.constraintlayout.widget.ConstraintLayout>